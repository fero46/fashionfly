<div class="shopwrapper">
  <div class="logo_container">
    <%= link_to image_tag(shop.logo, alt: shop.name), 
                shopref_path(assigned_locale, shop),
                title: shop.name,
                :rel => 'nofollow' %>
  </div>

  <%= link_to t('.details'),
              shop_path(assigned_locale, shop),
              title: shop.name,
              class: 'detail_link' %>

</div>