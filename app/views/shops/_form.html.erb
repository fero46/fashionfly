<%= form_for shop, url: (shop.new_record? ?
                      shops_path(assigned_locale) :
                      shop_path(assigned_locale, shop)
                   ), 
                   html:{class: 'formular profile_edit'} do |f| %>

  <div>
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name %>
  </div>

  <div>
      <%= f.label :link, class: 'label' %>
      <%= f.text_field :link %>
  </div>

  <div>
      <%= f.label :logo, class: 'label' %>
      <div class="upload_box">
        <%= image_tag f.object.logo %><br />
        <%= f.hidden_field :logo_cache %>
        <%= f.file_field :logo %>
      </div>
  </div>
  
  <div>
    <%= f.label :body, class: 'label' %>
    <%= f.text_area :body, class: 'tinymce' %>
  </div>

  <div>
    <%= f.label :sidebar_banner, class: 'label' %>
    <%= f.text_area :sidebar_banner %>
  </div>

  <div>
    <%= f.label :top_banner, class: 'label' %>
    <%= f.text_area :top_banner %>
  </div>  

  <div>
    <%= f.label :bottom_banner, class: 'label' %>
    <%= f.text_area :bottom_banner %>
  </div>

  <div>
      <%= f.label :position, class: 'label' %>
      <%= f.text_field :position %>
  </div>

  <div class="action">
    <%= f.submit t('.save_shop'), class: 'button' %>
  </div>


  <div class="clear"></div>
<% end %>