<%= form_for current_user, url: profile_path(assigned_locale, id:current_user.id), html:{class: 'formular profile_edit'} do |f| %>

  <div>
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name %>
  </div>

  <div>
      <%= f.label :avatar, class: 'label' %>
      <div class="upload_box">
        <%= image_tag f.object.avatar.smaller %><br />
        <%= f.file_field :avatar %> <%= t('.remove_image') %> <%= f.check_box :remove_avatar %><br />
      </div>
  </div>
  
  <div>
    <%= f.label :info, class: 'label' %>
    <%= f.text_area :info %>
  </div>

  <div class="action">
    <%= f.submit t('.update_profile'), class: 'button' %>
  </div>


  <div class="clear"></div>
<% end %>