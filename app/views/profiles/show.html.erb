<div class="profile container" ng-controller="ProfileController">
  <div class="profiles_header" data="<%= @user.banner %>">
    <div class="profile_image">
      <%= image_tag @user.avatar.smaller %>
    </div>
    <span class="name">
        <%= @user.name %>
    </span>
  </div>
  <div class="detail">
    <%= profile_edit(@user) %>
    <%= render 'profile_tabs', user: @user, active: {info:'active'} %>
    <div class="clear"></div>
    <div class="info">
      <%= @user.info_html %>
    </div>  
  </div>
</div>