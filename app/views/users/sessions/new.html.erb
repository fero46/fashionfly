<div class="white_box devise">

  <div class="left">
    <h1><%= t(".title") %></h1>
    <%= form_for(resource, as: resource_name, html: {class: 'formular'}, url: session_path(resource_name, locale: assigned_locale)) do |f| %>

      <%= f.email_field     :email, 
                            autofocus: true, 
                            placeholder: t('.placeholder_email'),
                            :class => field_class(resource, :email)  %>
      <%= f.password_field  :password, 
                            autocomplete: "off", 
                            placeholder: t('.placeholder_password'),
                            :class => field_class(resource, :password) %>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
      <%= f.submit t('.login'), class: 'button' %>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
  <div class="right">
    <div class="seperator"><span><%=t('.or') %></span></div>
    <%= render "users/shared/oauth" %>

  </div>

  <div class="clear"></div>
</div>
