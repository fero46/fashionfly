<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", backend_configurations_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_backend_configuration_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Konfigurationen</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.backend_configuration.key", :default => t("activerecord.labels.key", :default => "Key")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @configurations.each do |configuration| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= configuration.id %>
          </td>
                    <td>
            <%= link_to configuration.key, backend_configuration_path(configuration) %>
          </td>
                    <td>
            <%= configuration.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", backend_configuration_path(configuration) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_backend_configuration_path(configuration) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", backend_configuration_path(configuration), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
