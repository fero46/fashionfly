<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", backend_mappings_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_backend_mapping_path %></li>
      <li><%= link_to "Ãœbersicht", backend_mapping_categories_path %></li>

    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Mappings</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.backend_mapping.category_id", :default => t("activerecord.labels.category_id", :default => "Category_id")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @mappings.each do |mapping| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= mapping.id %>
          </td>
                    <td>
            <%= link_to mapping.category_id, backend_mapping_path(mapping) %>
          </td>
                    <td>
            <%= mapping.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", backend_mapping_path(mapping) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_backend_mapping_path(mapping) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", backend_mapping_path(mapping), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
