<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", backend_scope_pages_path(@scope)  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_backend_scope_page_path(@scope) %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Pages</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.backend_page.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @pages.each do |page| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= page.id %>
          </td>
                    <td>
            <%= link_to page.name, backend_scope_page_path(@scope,page) %>
          </td>
                    <td>
            <%= page.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", backend_scope_page_path(@scope,page) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_backend_scope_page_path(@scope,page) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", backend_scope_page_path(@scope,page), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= paginate @pages  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
