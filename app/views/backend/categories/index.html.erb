<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", backend_scope_categories_path(@scope)  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_backend_scope_category_path(@scope) %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Kategorie in <%= @scope.country_code %> </h2>
    <div class="inner">
     <div class="form">
      <%= form_for :category, 
                  url: backend_scope_categories_path(@scope), 
                  html: { :class => :form, id: 'main_category_form' } do |f| %>
        <%= f.label :name, class: 'label'  %>
        <%= f.text_field :name, class: 'text_field' %>
        <%= f.hidden_field :main_taxon, value: true %>
        <%= f.hidden_field :scope_id, value: @scope.id %>
        <br />
        <div class="action">
                  <br />

          <%= f.submit 'Hauptkategorie anlegen', class: 'button' %>
        </div>
      <% end %>
      <div class="clear"></div>
      </div>
    <ul class="tree">
      <%= render @categories %>
    </ul>
    </div>
  </div>
</div>