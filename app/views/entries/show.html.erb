<div class="collection_show" ng-controller="FavoriteController">
  <div class="leftside">


    <%= cache ['entry', @entry.title] do %>
      <h2><%= @entry.title %></h2>
      <div class="white_box entry_show">
        <strong><%= @entry.try(:feed).try(:value).try(:title) %> - <%= @entry.author %> : <%= l @entry.published %></strong> <br /><br />
        <%= raw @entry.content %>
        </br />
        <br />
       <%= link_to @entry.title, @entry.url, target: '_blank' %>
      </div>
    <% end %>
  </div>
  <div class="productviews">
    <h2><%= t('.products') %></h2>

    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
  <!-- FashionFly Ad -->
  <ins class="adsbygoogle"
       style="display:block"
       data-ad-client="ca-pub-3481906310275052"
       data-ad-slot="1965934592"
       data-ad-format="auto"></ins>
  <script>
  (adsbygoogle = window.adsbygoogle || []).push({});
  </script>

  <br /><br />

      <%= cache ['product_list', @entry.title ,@entry.products.first.updated_at] do %>
        <% for product in @entry.products %>
          <%= render 'products/small_product', product: product %>
        <% end %>
      <% end %>
  </div>
