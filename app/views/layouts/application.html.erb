<!DOCTYPE html>
<html ng-app="FashionFly" lang="<%=@scope.try(:language)%>">
<head>
  <title><%= yield(:title).presence || Settings.app.name %></title>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <%= stylesheet_link_tag    "application", media: "all"%>
  <%= csrf_meta_tags %>
  <% for scope in Scope.where(published: true) %>
    <link rel="alternate" href="<%= root_url(locale: scope.locale)%>"  hreflang="<%= scope.region_code %>" />
  <% end %>
  <%= yield :meta %>
</head>
<body>

<%= render 'shared/header' %>
<section class="content">
  <div class="container main">
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: "flash #{name}" %>
    <% end -%>
    <%= yield %>
  </div>
</section>
<%= yield :seo_text %>
<%= render 'shared/footer' %>

<%= render 'shared/email_enter_form' if (current_user.present? && current_user.email_has_to_change? || @show_form) %>

<%= javascript_include_tag "application" %>

<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-43710308-1', 'auto');
  ga('send', 'pageview');

</script>

</body>
</html>
