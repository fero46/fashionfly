<%= form_for banner, url: (banner.new_record? ?
                      banners_path(assigned_locale) :
                      banner_path(assigned_locale, banner)
                   ), 
                   html:{class: 'formular profile_edit'} do |f| %>

  <div>
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name %>
  </div>

  <div>
      <%= f.label :link, class: 'label' %>
      <%= f.text_field :link %>
  </div>

  <div>
      <%= f.label :preview_ids, class: 'label' %>
      <%= f.text_field :preview_ids %>
  </div>

  <div>
      <%= f.label :previews_model, class: 'label' %>
      <%= f.select :previews_model, Banner.MODELS %>
  </div>

  <div>
      <%= f.label :banner, class: 'label' %>
      <div class="upload_box">
        <%= image_tag f.object.banner %><br />
        <%= f.hidden_field :banner_cache %>
        <%= f.file_field :banner %>
      </div>
  </div>
  
  <div>
      <%= f.label :position, class: 'label' %>
      <%= f.text_field :position %>
  </div>

  <div class="action">
    <%= f.submit t('action.save'), class: 'button' %>
  </div>


  <div class="clear"></div>
<% end %>